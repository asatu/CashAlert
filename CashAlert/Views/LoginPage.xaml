<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CashAlert.Views.LoginPage">
    <StackLayout Margin="20,0,20,100" VerticalOptions="CenterAndExpand" Spacing="15" Orientation="Vertical">
        <Image Source="https://static.thenounproject.com/png/642808-200.png" Aspect="AspectFit" />
        <Label Text="Benvenuto in CashAlert" TextColor="Black" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" />
        <Entry Placeholder="Email nuovo Utente"  x:Name="UserNewEmail"></Entry>
        <Entry Placeholder="Password nuovo Utente"  x:Name="UserNewPassword"></Entry>
        <Button BackgroundColor="DarkSlateBlue" TextColor="White" Text="Registrati" Clicked="signupbutton_Clicked" x:Name="signupbutton"/>
        <BoxView HeightRequest="2" HorizontalOptions="FillAndExpand" BackgroundColor="Gray"/>
        <Entry Placeholder="Email Utente"  x:Name="UserLoginEmail"></Entry>
        <Entry Placeholder="Password Utente"  x:Name="UserLoginPassword"></Entry>
        <Button BackgroundColor="DarkSlateBlue" Clicked="loginbutton_Clicked" TextColor="White" Text="Accedi" x:Name="loginbutton"/>
    </StackLayout>
</ContentPage>